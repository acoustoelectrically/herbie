; -*- mode: scheme -*-

(FPCore (x eps)
  :name "2sin (example 3.3)"
  :pre (and (<= -1e4 x) (<= x 1e4) (< (* 1e-16 (fabs x)) eps) (< eps (* (fabs x))))

  :alt 
  (! :description (platform default)
     :note "From hamming"
     :cite (nmse-1987)
   (* 2 (cos (+ x (/ eps 2))) (sin (/ eps 2))))

  :alt 
  (! :description (platform default)
   (+ (* (cos x) (sin eps)) (- (* (cos eps) (sin x)) (sin x))))

  :alt 
  (! :description (platform foo)
   (cos x))
 
  (- (sin (+ x eps)) (sin x)))